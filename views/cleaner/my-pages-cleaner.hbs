<div class="cleaner-wrapper">

  <h2>Scheduled cleanings</h2>

  <div class="cleaner-table">
    <table class="cleaner-styled">
      <thead>

        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Customer</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody>
        {{#each cleanings}}
          <tr>
            <td>{{date}}</td>
            <td>{{time}}</td>
            <td>{{user.name}}</td>
            <td>{{user.adress}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="logout-div">
    <form action="/cleaner/log-out" method="post">
      <input type="submit" value="Log out" />
    </form>
  </div>

</div>